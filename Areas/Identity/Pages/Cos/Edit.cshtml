@page
@model Proiect_Magazin_Flori.Areas.Identity.Pages.Cos.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editeaza cosul</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cos.ID" />
            <div style="display:none" class="form-group">
                <label asp-for="Cos.UserID" class="control-label"></label>
                <input asp-for="Cos.UserID" class="form-control" />
                <span asp-validation-for="Cos.UserID" class="text-danger"></span>
            </div>
            <div style="display:none" class="form-group">
                <label asp-for="Cos.FloareID" class="control-label"></label>
                <select asp-for="Cos.FloareID" class="form-control" asp-items="ViewBag.FloareID"></select>
                <span asp-validation-for="Cos.FloareID" class="text-danger"></span>
            </div>
            <div class="form-group" disabled="disabled">
                <label class="control-label">Denumire Floare: </label>
                @Html.Label((string)ViewBag.FloareDenumire)

            </div>
            <div class="form-group">
                <label asp-for="Cos.Cantitate" class="control-label"></label>
                <input asp-for="Cos.Cantitate" class="form-control" />
                <span asp-validation-for="Cos.Cantitate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Inapoi la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
