@page
@model Proiect_Magazin_Flori.Areas.Identity.Pages.Adresa.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Adresa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="display:none" disabled="disabled" class="form-group">
                <label asp-for="Adresa.UserID" class="control-label"></label>
                <input asp-for="Adresa.UserID" placeholder="0" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Adresa.Nume" class="control-label"></label>
                <input asp-for="Adresa.Nume" class="form-control" />
                <span asp-validation-for="Adresa.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adresa.Prenume" class="control-label"></label>
                <input asp-for="Adresa.Prenume" class="form-control" />
                <span asp-validation-for="Adresa.Prenume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adresa.Oras" class="control-label"></label>
                <input asp-for="Adresa.Oras" class="form-control" />
                <span asp-validation-for="Adresa.Oras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adresa.Strada" class="control-label"></label>
                <input asp-for="Adresa.Strada" class="form-control" />
                <span asp-validation-for="Adresa.Strada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Inapoi la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
